local StarterGui = game:GetService("StarterGui")
local link = "https://discord.gg/DNMCvwrdKG"

local callbackFunction = Instance.new("BindableFunction")
callbackFunction.OnInvoke = function(buttonPressed)
    if setclipboard then
        setclipboard(link)
    elseif toclipboard then
        toclipboard(link)
    elseif syn and syn.write_clipboard then
        syn.write_clipboard(link)
    else
        print("Copy this link :", link)
    end
end

StarterGui:SetCore("SendNotification", {
    Title = "AVATAR CHANGER",
    Text = "Join our Discord for purchase ALSO IF YOU JOIN DISCORD FREE 1 DAY TRIAL",
    Duration = 5,
    Button1 = "COPY LINK",
    Callback = callbackFunction
})
